<Window x:Class="Simile.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Simile"
        mc:Ignorable="d"
        Title="MainWindow" Height="372" Width="508.727">
    <Grid Margin="0,0,3.333,-0.333">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="Auto" MinWidth="249.667"/>
        </Grid.ColumnDefinitions>
        <Button x:Name="button" Content="Find a topic" HorizontalAlignment="Left" Margin="139.333,222,0,0" VerticalAlignment="Top" Width="101" Grid.Column="1" Height="20"/>
        <ListBox x:Name="listBox" HorizontalAlignment="Left" Height="323" Margin="10,10,0,0" VerticalAlignment="Top" Width="229"/>
        <Label x:Name="label" Content="" Grid.Column="1" HorizontalAlignment="Left" Margin="10.333,222,0,0" VerticalAlignment="Top" Width="129" BorderBrush="#FF0C0202" Background="{x:Null}" Foreground="#FF0D0606" BorderThickness="1" Height="20"/>
        <Button x:Name="Addbutton" Content="Add new topic" HorizontalAlignment="Left" Margin="10.333,256,0,0" VerticalAlignment="Top" Width="230" Height="20" Grid.Column="1"/>
        <Button x:Name="Deletebutton" Content="Delete your topic" HorizontalAlignment="Left" Margin="10.333,289,0,0" VerticalAlignment="Top" Width="230" Height="20" Click="Deletebutton_Click" Grid.Column="1"/>
        <Label x:Name="label1" Content="Info" Grid.Column="1" HorizontalAlignment="Left" Margin="108.333,10,0,0" VerticalAlignment="Top"/>
        <ListBox x:Name="listBox1" Grid.Column="1" HorizontalAlignment="Left" Height="166" Margin="10.333,36,0,0" VerticalAlignment="Top" Width="230"/>

    </Grid>
</Window>
